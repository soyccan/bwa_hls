{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "upload & make remote",
            "type": "shell",
            "command": "wsl bash ./scripts/upload.sh",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "make local",
            "type": "shell",
            "command": "wsl make -j4",
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}/bwa_hls/src"
                ]
            },
            "options": {
                "cwd": "bwa_hls/src"
            },
            "group": "build"
        }
    ],
}